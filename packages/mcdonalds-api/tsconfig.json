{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
  },
  "exclude": [
    "node_modules"
  ],
    "include": [
        "src/**/*",
      "scripts/**/*"
    ]
}
